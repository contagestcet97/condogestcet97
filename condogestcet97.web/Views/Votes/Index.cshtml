@model IEnumerable<condogestcet97.web.Data.Entities.Condominium.Vote>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VotesInFavour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VotesAgainst)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VotesAbstained)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VotesInFavour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VotesAgainst)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VotesAbstained)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
