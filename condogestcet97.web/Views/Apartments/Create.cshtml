@model condogestcet97.web.Models.ApartmentViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Apartment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Flat" class="control-label"></label>
                <input asp-for="Flat" class="form-control" />
                <span asp-validation-for="Flat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Divisions" class="control-label"></label>
                <input asp-for="Divisions" class="form-control" />
                <span asp-validation-for="Divisions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CondoId" class="control-label">Select condo</label>
                <select asp-for="CondoId" asp-items="ViewBag.Condos" class="form-control">
                    <option value="">Select a condo</option>
                </select>
                <span asp-validation-for="CondoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
